@{
    ViewBag.Title = "XemPhanHoi";
    Layout = "~/Views/Shared/_LayoutQuanTriVien.cshtml";
}
@model IEnumerable<QuanLyVeTau.Models.PhanHoi>
<div class="container">

    <h2 class="text-center mb-5 font-weight-bold">Phản hồi của khách hàng</h2>

    <!-- Bảng phản hồi đẹp hơn với Bootstrap table styling -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th class="text-center">Mã hoá đơn</th>
                    <th class="text-center">Nội dung</th>
                    <th class="text-center">Mã hóa đơn</th>
                    <th class="text-center">Số sao</th>
                    <th class="text-center">Ngày phản hồi</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var phanHoi in Model)
                    {
                        <tr>
                            <td class="text-center">@phanHoi.MaHoaDon</td>
                            <td class="text-center">@phanHoi.NoiDung</td>
                            <td class="text-center">@phanHoi.MaHoaDon</td>
                            <td class="text-center">
                                <!-- Hiển thị sao theo số sao -->
                                @for (int i = 1; i <= phanHoi.SoSao; i++)
                                {
                                    <i class="fa fa-star text-warning"></i>
                                }
                                @if (phanHoi.SoSao < 5)
                                {
                                    for (int i = phanHoi.SoSao + 1; i <= 5; i++)
                                    {
                                        <i class="fa fa-star text-secondary"></i>
                                    }
                                }
                            </td>
                            <td class="text-center">@phanHoi.NgayPhanHoi.ToString("dd/MM/yyyy")</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">Không có phản hồi nào từ khách hàng.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-center mt-3">
        <button class="btn btn-primary btn-sm" onclick="window.location.reload()">Làm mới</button>
    </div>
</div>
