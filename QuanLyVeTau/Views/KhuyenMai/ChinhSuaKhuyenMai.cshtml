@{
    ViewBag.Title = "ChinhSuaKhuyenMai";
    Layout = "~/Views/Shared/_LayoutQuanTriVien.cshtml";
}

@model QuanLyVeTau.Models.KhuyenMai

<div class="container mb-5">
    <h2 class="text-center mb-4">Chỉnh Sửa Khuyến Mãi</h2>

    @using (Html.BeginForm("ChinhSuaKhuyenMai", "KhuyenMai", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <!-- Cột bên trái -->
            <div class="col-md-6">
                <div class="form-group mb-3">
                    @Html.Label("TenKhuyenMai", "Tên Khuyến Mãi", new { @class = "font-weight-bold" })
                    @Html.TextBox("TenKhuyenMai", Model.TenKhuyenMai, new { @class = "form-control", placeholder = "Nhập tên chương trình khuyến mãi" })
                </div>

                <div class="form-group mb-3">
                    @Html.Label("PhanTramGiam", "Phần Trăm Giảm", new { @class = "font-weight-bold" })
                    @Html.TextBox("PhanTramGiam", Model.PhanTramGiam.ToString(), new { @class = "form-control", @type = "number", @step = "0.01", placeholder = "Nhập phần trăm giảm" })
                </div>

                <div class="form-group mb-3">
                    @Html.Label("SoTienGiamToiDa", "Số Tiền Giảm Tối Đa", new { @class = "font-weight-bold" })
                    @Html.TextBox("SoTienGiamToiDa", Model.SoTienGiamToiDa.ToString(), new { @class = "form-control", @type = "number", placeholder = "Nhập số tiền giảm tối đa" })
                </div>
            </div>

            <!-- Cột bên phải -->
            <div class="col-md-6">
                <div class="form-group mb-3">
                    @Html.Label("NgayBatDau", "Ngày Bắt Đầu", new { @class = "font-weight-bold" })
                    @Html.TextBox("NgayBatDau", Model.NgayBatDau.ToString("yyyy-MM-dd"), new { @class = "form-control", @type = "date" })
                </div>

                <div class="form-group mb-3">
                    @Html.Label("NgayKetThuc", "Ngày Kết Thúc", new { @class = "font-weight-bold" })

                    @if (Model.NgayKetThuc == null)
                    {
                        @Html.TextBox("NgayKetThuc", "", new { @class = "form-control", @type = "date", placeholder = "Chưa có ngày" })
                    }
                    else
                    {
                        @Html.TextBox("NgayKetThuc", Model.NgayKetThuc.Value.ToString("yyyy-MM-dd"), new { @class = "form-control", @type = "date" })
                    }
                </div>



                <div class="form-group mb-3">
                    @Html.Label("SoLuong", "Số Lượng", new { @class = "font-weight-bold" })
                    @Html.TextBox("SoLuong", Model.SoLuong.ToString(), new { @class = "form-control", @type = "number", placeholder = "Nhập số lượng khuyến mãi" })
                </div>
            </div>
        </div>

        <!-- Nút quay lại và nút cập nhật -->
        <div class="d-flex justify-content-between">
            <a href="@Url.Action("DanhSachKhuyenMai", "KhuyenMai")" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle me-2"></i>Quay lại
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-circle me-2"></i>Cập Nhật Khuyến Mãi
            </button>
        </div>
    }
</div>
