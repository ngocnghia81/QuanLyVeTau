@{
    ViewBag.Title = "CapNhatThongTin";
    Layout = "~/Views/Shared/_LayoutNguoiDung.cshtml";
    QuanLyVeTau.Models.KhachHang khachHang = Model;
}



<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-dark text-white text-center">
            <h3>Cập nhật thông tin tài khoản</h3>
        </div>
        <div class="card-body">
            <form id="CapNhatThongTin" method="post" action="@Url.Action("CapNhat","NguoiDung")">
                <div class="mb-3">
                    <label for="HoTen" class="form-label">Họ Tên:</label>
                    <input type="text" id="HoTen" name="HoTen" class="form-control" value="@khachHang.TenKhach" required>
                </div>
                <div class="mb-3">
                    <label for="NamSinh" class="form-label">Ngày Sinh:</label>
                    <input type="date" max="@DateTime.Now.ToString("yyyy-MM-dd")" id="NamSinh" name="NamSinh" class="form-control" value="@khachHang.NamSinh.ToString("yyyy-MM-dd")" required>
                </div>
                <div class="mb-3">
                    <label for="Email" class="form-label">Email:</label>
                    <input type="email" id="Email" name="Email" class="form-control" value="@khachHang.Email" readonly>
                </div>
                <div class="mb-3">
                    <label for="SDT" class="form-label">Số điện thoại:</label>
                    <input type="tel" id="SDT" name="SDT" class="form-control" value="@khachHang.SDT" required>
                </div>
                <div class="mb-3">
                    <label for="CCCD" class="form-label">CCCD:</label>
                    <input type="text" id="CCCD" name="CCCD" class="form-control" value="@khachHang.CCCD">
                </div>
                <div class="mb-3">
                    <label for="DiaChi" class="form-label">Địa chỉ:</label>
                    <input id="DiaChi" name="DiaChi" class="form-control" value="@khachHang.DiaChi" required>
                </div>
                <div class="text-center">
                    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#confirmationModal">
                        <i class="bi bi-save"></i> Cập nhật
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="confirmationModal" tabindex="-1" aria-labelledby="confirmationModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="confirmationModalLabel">Xác nhận cập nhật</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Bạn có chắc chắn muốn cập nhật thông tin không?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                    <button type="submit" class="btn btn-success">Xác nhận</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">
                    <strong>Lỗi: </strong>@ViewBag.ErrorMessage.ToString()
                </div>
            }
        </div>
    </div>
</div>

<script>
    console.log("@ViewBag.ErrorMessage")
</script>