@{ 
    var homelink = "/";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- bootstrap css start -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
    <!-- bootstrap css end -->
    <!-- bootstrap-icons start -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css" />
    <!-- bootstrap-icons end -->
    <link rel="shortcut icon" href="Images/IRCTC-Logo-PNG-768x768.webp" type="image/x-icon" />
    <!-- Custom CSS Start -->
    <link rel="stylesheet" href="~/Content/index.css" />

    <!-- Custom CSS Start -->
    <title>Đường sắt</title>
</head>
<body>
    <!-- top header start -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary bg-dark" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="@homelink">Đường sắt Việt Nam</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <button class="nav-link text-white" id="welcomeNote" aria-current="page" disabled></button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link text-white" id="showUserName" disabled></button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link text-white" id="showCurrentTime"></button>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item" id="log">
                            <a href="#" type="button" class="nav-link pLogActive" id="pLogSwitch" data-bs-target="#plogModal">
                                Tài khoản
                            </a>
                        </li>


                        <li class="nav-item">
                            <button class="nav-link" id="pLogSwitch2" onclick="window.location.href='@Url.Action("DangXuat", "TaiKhoan")'">Đăng xuất</button>
                        </li>

                    }
                    else
                    {
                        <li class="nav-item" id="log">
                            <a href="@Url.Action("DangNhap", "TaiKhoan")" type="button" class="nav-link pLogActive" id="pLogSwitch" data-bs-target="#plogModal">
                                Đăng nhập
                            </a>

                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("DangKy", "TaiKhoan")">Đăng ký</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-danger" href="admin.html" id="aLogin" data-bs-toggle="modal" data-bs-target="#alogModal">Đăng nhập quản trị</a>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </nav>

    <!-- second header start -->
    <nav class="navbar navbar-expand-lg scndNavbar" style="background-color: #fff">
        <div class="container-fluid">
            <div class="collapse navbar-collapse" id="navbarNav">
                <a class="navbar-brand" href="@homelink">
                    <img style="width: 50px" src="~/Content/Images/6a724b9501764fd83a4abcd37b58144d.png" alt="Railways Logo" />
                </a>
                <ul class="navbar-nav me-auto mb-2 mb-lg-0" role="tablist">
                    @if (!User.Identity.IsAuthenticated)
                    {


                        <li class="nav-item" role="presentation">
                            <a href="index.html" class="nav-link active" id="heroSection-tab" data-bs-toggle="tab"
                               data-bs-target="#heroSection" type="button" role="tab" aria-controls="heroSection" aria-selected="true">
                                <i class="bi bi-house-door-fill"></i>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("TimVe", "Ve")">Tìm vé</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Huỷ Vé</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Lịch sử vé</a>
                        </li>
                    }

                </ul>
                <div class="d-flex">
                    <img style="width: 50px" src="~/Content/Images/6a724b9501764fd83a4abcd37b58144d.png" alt="" />
                </div>
            </div>
        </div>
    </nav>
    <!-- second header end -->
    


    @RenderBody()



    <!-- Footer Start -->
    <footer class="bg-dark text-white pt-4 pb-2" style="width:100%">
        <div class="container">
            <div class="row">
                <!-- Logo và Giới thiệu -->
                <div class="col-md-4 mb-3">
                    <h5>Đường sắt Việt Nam</h5>
                    <p>Chúng tôi mang đến dịch vụ vận chuyển an toàn và nhanh chóng trên toàn quốc.</p>
                </div>

                <!-- Liên kết nhanh -->
                <div class="col-md-4 mb-3">
                    <h5>Liên kết nhanh</h5>
                    <ul class="list-unstyled">
                        <li><a href="@Url.Action("TimVe","Ve")" class="text-white text-decoration-none">Đặt Vé</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Huỷ vé</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Lịch sử mua vé</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Liên hệ</a></li>
                    </ul>
                </div>

                <!-- Kết nối mạng xã hội -->
                <div class="col-md-4 mb-3">
                    <h5>Kết nối với chúng tôi</h5>
                    <div class="d-flex gap-3">
                        <a href="#" class="text-white"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-white"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="text-white"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="text-white"><i class="bi bi-youtube"></i></a>
                    </div>
                </div>
            </div>

            <hr class="bg-white" />

            <!-- Bản quyền -->
            <div class="text-center pt-2">
                <p class="mb-0">© 2024 Đường sắt Việt Nam. Bản quyền thuộc về công ty.</p>
            </div>
        </div>
    </footer>
    <!-- Footer End -->


    <script src="~/Scripts/index.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
    <script>
        let navLink = document.querySelectorAll('.navbar .t')
        navLink.forEach((elm) => {
            elm.addEventListener('click', () => {
                document.getElementsByClassName('navbar-toggler')[0].click();
            })
        })
    </script>
</body>

</html>
