<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="https://site-assets.fontawesome.com/releases/v6.4.2/css/all.css" />
    <link rel="shortcut icon" href="Images/IRCTC-Logo-PNG-768x768.webp" type="image/x-icon" />
    <!-- Custom CSS -->
    <title>Quản trị Đường sắt</title>
    <link href="~/Content/all.css" rel="stylesheet" />
    <style>
        /* Cải thiện hiệu ứng hover */
        .list-group-item {
            transition: background-color 0.3s ease, color 0.3s ease, font-size 0.3s ease, font-weight 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
            border-radius: 8px; /* Bo góc cho các item */
            padding: 12px 20px; /* Thêm padding để các item đẹp hơn */
            cursor: pointer; /* Thêm con trỏ pointer cho item */
        }

        /* Màu nền và màu chữ khi hover */
        .list-group-item:hover {
            background-color: #0056b3; /* Màu nền khi hover */
            color: white; /* Màu chữ khi hover */
            font-weight: bold; /* Đậm chữ khi hover */
            font-size: 15px; /* Tăng kích thước chữ khi hover */
            transform: scale(1.05); /* Tăng nhẹ kích thước item khi hover */
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Thêm bóng đổ nhẹ khi hover */
        }

        /* Màu nền và màu chữ khi item được chọn (active) */
        .list-group-item.active {
            background-color: #007bff; /* Màu nền khi active */
            color: white; /* Màu chữ khi active */
            font-weight: bold; /* Đậm chữ khi active */
            font-size: 20px; /* Tăng kích thước chữ khi active */
            box-shadow: 0 4px 15px rgba(0, 123, 255, 0.3); /* Thêm bóng đổ mạnh hơn khi active */
        }

        /* Cải thiện hiệu ứng hover khi item được active */
        .list-group-item.active:hover {
            background-color: #0056b3; /* Màu nền khi hover và active */
            color: white; /* Màu chữ khi hover và active */
            font-weight: bold; /* Đậm chữ khi hover và active */
            font-size: 15px; /* Tăng kích thước chữ khi hover và active */
            transform: scale(1.05); /* Tăng nhẹ kích thước item khi hover */
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2); /* Thêm bóng đổ đậm khi hover và active */
        }



        #wrapper {
            display: flex;
            flex-direction: row;
            transition: margin-left 0.3s ease;
        }

        #sidebar-wrapper {
            width: 250px;
            background-color: #343a40;
            transition: all 0.3s ease;
        }

            #sidebar-wrapper.toggled {
                margin-left: -250px;
            }

        #page-content-wrapper {
            flex-grow: 1;
        }

        footer {
            background-color: #343a40;
            color: white;
            text-align: center;
            padding: 10px 0;
        }

        .navbar-toggler {
            border-color: #fff;
        }
    </style>
</head>

<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar Start -->
        <nav class="bg-dark border-end" id="sidebar-wrapper">
            <div class="sidebar-heading text-center py-4 text-white fs-4 fw-bold">Quản trị Đường sắt</div>
            <div class="list-group list-group-flush">


                <a href="@Url.Action("dashboard", "QuanTri")" class="list-group-item list-group-item-action bg-dark text-white"
                   id="dashboardLink"
                   @if (ViewBag.ActiveLink == "dashboardLink") { <text> class="list-group-item list-group-item-action bg-dark text-white active" </text> }>
                    <i class="bi bi-speedometer2 me-2"></i>Dashboard
                </a>
                <a href="@Url.Action("DanhSachKhachHang", "KhachHang")" class="list-group-item list-group-item-action bg-dark text-white"
                   id="manageCustomersLink"
                   @if (ViewBag.ActiveLink == "manageCustomersLink") { <text> class="list-group-item list-group-item-action bg-dark text-white active" </text> }>
                    <i class="bi bi-person-fill me-2"></i>Quản lý Khách hàng
                </a>
                <a href="@Url.Action("DanhSachVe", "Ve")" class="list-group-item list-group-item-action bg-dark text-white"
                   id="manageTicketsLink"
                   @if (ViewBag.ActiveLink == "manageTicketsLink") { <text> class="list-group-item list-group-item-action bg-dark text-white active" </text> }>
                    <i class="fas fa-ticket-alt me-2"></i>Quản lý Vé
                </a>

                <a href="@Url.Action("DanhSachHoaDon", "HoaDon")" class="list-group-item list-group-item-action bg-dark text-white"
                   id="manageInvoices"
                   @if (ViewBag.ActiveLink == "manageInvoices") { <text> class="list-group-item list-group-item-action bg-dark text-white active" </text> }>
                    <i class="fas fa-file-invoice me-2"></i>Quản lý Hóa đơn
                </a>

                <a href="@Url.Action("DanhSachKhuyenMai", "KhuyenMai")" class="list-group-item list-group-item-action bg-dark text-white"
                   id="managePromotions"
                   @if (ViewBag.ActiveLink == "managePromotions") { <text> class="list-group-item list-group-item-action bg-dark text-white active" </text> }>
                    <i class="fas fa-gift me-2"></i>Quản lý Khuyến mãi
                </a>

                <a href="@Url.Action("DanhSachTau", "Tau")" class="list-group-item list-group-item-action bg-dark text-white"
                   id="manageTrains"
                   @if (ViewBag.ActiveLink == "manageTrains") { <text> class="list-group-item list-group-item-action bg-dark text-white active" </text> }>
                    <i class="fas fa-train me-2"></i>Quản lý Tàu
                </a>

                <a href="@Url.Action("DanhSachLichTrinh", "LichTrinh")" class="list-group-item list-group-item-action bg-dark text-white"
                   id="manageSchedulesLink"
                   @if (ViewBag.ActiveLink == "manageSchedulesLink") { <text> class="list-group-item list-group-item-action bg-dark text-white active" </text> }>
                    <i class="bi bi-calendar3 me-2"></i>Lịch trình
                </a>

                <a href="@Url.Action("DanhSachNhanVien", "NhanVien")" class="list-group-item list-group-item-action bg-dark text-white"
                   id="manageStaffLink"
                   @if (ViewBag.ActiveLink == "manageStaffLink") { <text> class="list-group-item list-group-item-action bg-dark text-white active" </text> }>
                    <i class="bi bi-people-fill me-2"></i>Quản lý Nhân viên
                </a>

                <a href="@Url.Action("XemLichPhanCong", "PhanCong")" class="list-group-item list-group-item-action bg-dark text-white"
                   id="manageAssignments"
                   @if (ViewBag.ActiveLink == "manageAssignments") { <text> class="list-group-item list-group-item-action bg-dark text-white active" </text> }>
                    <i class="bi bi-card-checklist me-2"></i>Phân công
                </a>

                <a href="@Url.Action("DoanhThuTheoNgay", "BaoCao")" class="list-group-item list-group-item-action bg-dark text-white"
                   id="reports"
                   @if (ViewBag.ActiveLink == "reports") { <text> class="list-group-item list-group-item-action bg-dark text-white active" </text> }>
                    <i class="bi bi-graph-up me-2"></i>Báo cáo
                </a>

                <a href="@Url.Action("DanhSachPhanHoi", "PhanHoi")" class="list-group-item list-group-item-action bg-dark text-white"
                   id="feedback"
                   @if (ViewBag.ActiveLink == "feedback") { <text> class="list-group-item list-group-item-action bg-dark text-white active" </text> }>
                    <i class="bi bi-chat-left-text-fill me-2"></i>Phản hồi
                </a>
            </div>
        </nav>
        <!-- Sidebar End -->
        <!-- Page Content Start -->
        <div id="page-content-wrapper" class="flex-grow-1">
            <!-- Top Navbar -->
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <div class="container-fluid">
                    <button class="btn btn-primary" id="menu-toggle"><i class="bi bi-list"></i></button>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="#profile">Xin chào, @Session["Email"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/QuanTri/DangXuat">Đăng xuất</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            @RenderBody()
        </div>
        <!-- Page Content End -->
    </div>

    <footer class="bg-dark text-white pt-4 pb-2">
        <div class="container text-center">
            <p class="mb-0">© 2024 Đường sắt Việt Nam. Bản quyền thuộc về công ty.</p>
        </div>
    </footer>
    @RenderSection("Scripts", required: false)

    <!-- jQuery phải được tải trước Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>

    <script>
        // Toggle Sidebar
        document.getElementById("menu-toggle").addEventListener("click", function () {
            document.getElementById("sidebar-wrapper").classList.toggle("toggled");
        });
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const links = document.querySelectorAll('.list-group-item');

            // Lấy trạng thái "active" đã lưu trong sessionStorage
            const activeLinkId = sessionStorage.getItem('activeLinkId');

            // Nếu có item đã lưu trong sessionStorage, thêm lớp active cho nó
            if (activeLinkId) {
                const activeLink = document.getElementById(activeLinkId);
                if (activeLink) {
                    activeLink.classList.add('active');
                }
            }

            // Xử lý sự kiện click
            links.forEach(link => {
                link.addEventListener('click', function () {
                    // Xóa lớp "active" khỏi tất cả các item
                    links.forEach(item => item.classList.remove('active'));

                    // Thêm lớp "active" vào item đã click
                    this.classList.add('active');

                    // Lưu lại id của item active vào sessionStorage
                    sessionStorage.setItem('activeLinkId', this.id);
                });
            });
        });


    </script>

    <script>
        // Điều khiển việc mở/đóng menu con khi nhấn vào "Báo cáo"
        document.getElementById("reports").addEventListener("click", function () {
            var reportsMenu = document.getElementById("reportsMenu");
            // Kiểm tra trạng thái hiện tại và chuyển sang trạng thái ngược lại (mở/đóng)
            if (reportsMenu.classList.contains("collapse")) {
                reportsMenu.classList.remove("collapse");
                reportsMenu.classList.add("show");
            } else {
                reportsMenu.classList.remove("show");
                reportsMenu.classList.add("collapse");
            }
        });
    </script>

</body>

</html>
