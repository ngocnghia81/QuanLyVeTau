@{
    ViewBag.Title = "Quên Mật Khẩu";
    Layout = "~/Views/Shared/_LayoutNguoiDung.cshtml";
}

<h2 class="text-center">Quên Mật Khẩu</h2>

<div class="container mt-5">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info">
            @TempData["Message"]
        </div>
    }
    @using (Html.BeginForm("QuenMatKhau", "TaiKhoan", FormMethod.Post))
    {
        <div class="form-group">
            <label for="email">Email</label>
            @Html.TextBox("email", null, new { @class = "form-control", placeholder = "Nhập email của bạn" })
        </div>

        <div class="form-group">
            <label for="phone">Số điện thoại</label>
            @Html.TextBox("phone", null, new { @class = "form-control", placeholder = "Nhập số điện thoại của bạn" })
        </div>

        <div class="form-group">
            <label for="cccd">Số CCCD</label>
            @Html.TextBox("cccd", null, new { @class = "form-control", placeholder = "Nhập số CCCD của bạn" })
        </div>

        <button type="submit" class="btn btn-primary">Xác nhận</button>
    }
</div>
