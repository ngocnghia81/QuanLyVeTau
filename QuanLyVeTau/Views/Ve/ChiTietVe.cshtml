@{
    ViewBag.Title = "ChiTietVe";
    Layout = "~/Views/Shared/_LayoutQuanTriVien.cshtml";
}

@model QuanLyVeTau.Models.VeChiTietViewModel

<div class="container mt-5">
    <h2 class="text-center mb-5 font-weight-bold">Thông Tin Chi Tiết Vé</h2>

    <!-- Card chứa thông tin chi tiết vé -->
    <div class="card shadow-lg p-4">
        <div class="card-body">
            <table class="table table-bordered table-hover">
                <tbody>
                    <tr>
                        <th class="col-md-4">Mã Vé</th>
                        <td><strong>@Model.MaVe</strong></td>
                    </tr>
                    <tr>
                        <th>Khách Hàng</th>
                        <td><i class="bi bi-person"></i> @Model.TenKhachHang</td>
                    </tr>
                    <tr>
                        <th>Tàu</th>
                        <td><i class="bi bi-tratruck me-2"></i> @Model.TenTau</td>
                    </tr>
                    <tr>
                        <th>Loại Toa</th>
                        <td>@Model.TenLoaiToa</td>
                    </tr>
                    <tr>
                        <th>Lịch Trình</th>
                        <td>
                            @Model.TenLichTrinh <br />
                            <small class="text-muted">(Khởi hành: @Model.ThoiGianKhoiHanh.ToString("HH:mm dd/MM/yyyy") | Đến dự kiến: @Model.ThoiGianDen.ToString("HH:mm dd/MM/yyyy") | @Model.KhoangCach km)</small>
                        </td>
                    </tr>
                    <tr>
                        <th>Điểm Đi</th>
                        <td>@Model.DiemDi <br /> <small class="text-muted">@Model.DiaChiDiemDi</small></td>
                    </tr>
                    <tr>
                        <th>Điểm Đến</th>
                        <td>@Model.DiemDen <br /> <small class="text-muted">@Model.DiaChiDiemDen</small></td>
                    </tr>
                    <tr>
                        <th>Số Ghế</th>
                        <td>@Model.SttGhe</td>
                    </tr>
                    <tr>
                        <th>Giá Vé</th>
                        <td><strong>@String.Format("{0:N0} VND", Model.GiaVe)</strong></td>
                    </tr>
                    <tr>
                        <th>Thành Tiền</th>
                        <td><strong>@String.Format("{0:N0} VND", Model.ThanhTien)</strong></td>
                    </tr>
                    <tr>
                        <th>Thời Gian Lập Hóa Đơn</th>
                        <td>@(Model.ThoiGianLapHoaDon.HasValue ? Model.ThoiGianLapHoaDon.Value.ToString("HH:mm dd/MM/yyyy") : "Không có dữ liệu")</td>
                    </tr>
                    <tr>
                        <th>Trạng Thái Thu Hồi</th>
                        <td>
                            <span class="badge @(Model.DaThuHoi ? "bg-success" : "bg-warning")">
                                @(Model.DaThuHoi ? "Đã Thu Hồi" : "Chưa Thu Hồi")
                            </span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Button quay lại danh sách vé -->
    <div class="text-center mt-4 mb-4">
        <a href="@Url.Action("DanhSachVe", "Ve")" class="btn btn-primary btn-lg">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>
</div>
<link href="~/Content/boostrap/font.all.min.css" rel="stylesheet" />
